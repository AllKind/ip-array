<!-- FILTER TABLE IPSEC RULEBLOCKS -->

<ip_array_root name="ruleblocks" syntax_version="0.1">

<ruleblock name="RB_ALLOW_VPN_INPUT">
	<!-- 
	Purpose: Stateful INPUT ACCEPT rules in ipsec chain
	Template options:
	+ filter table
	+ ACCEPT target
	+ chain set to ${ipsec_chain}
	Resulting ruleblock structure:
	1: input device
	2: source address
	3: destination address
	4: protocol
	5: source port
	6: destination port
	7: state
	8: limit
	-->
</ruleblock>

