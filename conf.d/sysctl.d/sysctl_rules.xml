<?xml version="1.0"?>

<!--
	EXAMPLE SYSCTL RULES
	This is a completely optional excerpt of commonly used sysctl settings.
	Modify them to your needs.
-->

<ip_array_root name="sysctl_rules" syntax_version="1.0">
<net>
	<ipv4>
		<icmp_echo_ignore_all> 0 </icmp_echo_ignore_all>
		<icmp_echo_ignore_broadcasts> 0 </icmp_echo_ignore_broadcasts>
		<icmp_ignore_bogus_error_responses> 1 </icmp_ignore_bogus_error_responses>
		<ip_dynaddr> 0 </ip_dynaddr>
		<ip_forward> 0 </ip_forward>
		<tcp_congestion_control> bic </tcp_congestion_control>
		<tcp_dsack> 1 </tcp_dsack>
		<tcp_ecn> 2 </tcp_ecn>
		<tcp_fack> 1 </tcp_fack>
		<tcp_sack> 1 </tcp_sack>
		<tcp_syncookies> 1 </tcp_syncookies>
		<tcp_window_scaling> 1 </tcp_window_scaling>
		<conf>
			<all>
				<accept_redirects> 0 </accept_redirects>
				<accept_source_route> 0 </accept_source_route>
				<log_martians> 0 </log_martians>
				<rp_filter> 1 </rp_filter>
				<secure_redirects> 0 </secure_redirects>
			</all>
			<default>
				<accept_redirects> 0 </accept_redirects>
				<accept_source_route> 0 </accept_source_route>
				<log_martians> 0 </log_martians>
				<rp_filter> 1 </rp_filter>
				<secure_redirects> 0 </secure_redirects>
			</default>
		</conf>
	</ipv4>
	<netfilter>
		<nf_conntrack_acct> 0 </nf_conntrack_acct>
		<nf_conntrack_events> 0 </nf_conntrack_events>
		<nf_conntrack_helper> 1 </nf_conntrack_helper>
		<nf_conntrack_icmp_timeout> 30 </nf_conntrack_icmp_timeout>
		<nf_conntrack_log_invalid> 0 </nf_conntrack_log_invalid>
		<nf_conntrack_tcp_be_liberal> 0 </nf_conntrack_tcp_be_liberal>
		<nf_conntrack_tcp_loose> 0 </nf_conntrack_tcp_loose>
		<nf_conntrack_tcp_max_retrans> 3 </nf_conntrack_tcp_max_retrans>
		<nf_conntrack_tcp_timeout_close> 10 </nf_conntrack_tcp_timeout_close>
		<nf_conntrack_tcp_timeout_close_wait> 60 </nf_conntrack_tcp_timeout_close_wait>
		<nf_conntrack_tcp_timeout_established> 432000 </nf_conntrack_tcp_timeout_established>
		<nf_conntrack_tcp_timeout_fin_wait> 120 </nf_conntrack_tcp_timeout_fin_wait>
		<nf_conntrack_tcp_timeout_last_ack> 30 </nf_conntrack_tcp_timeout_last_ack>
		<nf_conntrack_tcp_timeout_max_retrans> 300 </nf_conntrack_tcp_timeout_max_retrans>
		<nf_conntrack_tcp_timeout_syn_recv> 60 </nf_conntrack_tcp_timeout_syn_recv>
		<nf_conntrack_tcp_timeout_syn_sent> 120 </nf_conntrack_tcp_timeout_syn_sent>
		<nf_conntrack_tcp_timeout_time_wait> 120 </nf_conntrack_tcp_timeout_time_wait>
		<nf_conntrack_tcp_timeout_unacknowledged> 300 </nf_conntrack_tcp_timeout_unacknowledged>
		<nf_conntrack_timestamp> 0 </nf_conntrack_timestamp>
		<nf_conntrack_udp_timeout> 30 </nf_conntrack_udp_timeout>
		<nf_conntrack_udp_timeout_stream> 180 </nf_conntrack_udp_timeout_stream>
	</netfilter>
</net>
</ip_array_root>

